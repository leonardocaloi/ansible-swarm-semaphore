#Ingress
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: rancher-ingress
  namespace: cattle-system
spec:
  rules:
  - host: "{{ rancher_helm_values.hostname }}"
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: rancher
            port:
              number: 80
  tls:
  - hosts:
    - "{{ rancher_helm_values.hostname }}"
    secretName: {{ rancher_helm_values.hostname }}-tls