apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: {{ issuer_name }}
spec:
  acme:
    server: {{ acme_server_url }}
    email: {{ issuer_email }}
    privateKeySecretRef:
      name: {{ issuer_private_key_secret }}
    solvers:
    - http01:
        ingress:
          class: {{ ingress_class }}